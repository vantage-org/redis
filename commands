#!/usr/bin/env bash

function count_redis_containers() {
    echo $(docker ps -a | grep "$VG_RUN_PREFIX"_redis_ | wc -l)
}

function random_string() {
    echo $(cat /dev/urandom | tr -dc 'a-z' | fold -w 16 | head -n 1)
}

case "$1" in
    new)
        name="$VG_RUN_PREFIX"_redis_$(count_redis_containers)
        password=$(random_string)
        docker run \
            --detach \
            --publish-all \
            --name $name \
            redis redis-server --requirepass "$password" \
            &> /dev/null
        port=$(docker inspect --format='{{range $p, $conf := .NetworkSettings.Ports}}{{(index $conf 0).HostPort}}{{end}}' $name)
        echo redis://h:$password@localhost:$port
        exit $VG_VALID_EXIT
        ;;
    rm)
        docker stop $(docker ps | grep "$VG_RUN_PREFIX"_redis_ | cut  -d' ' -f1) &> /dev/null
        docker rm $(docker ps -a | grep "$VG_RUN_PREFIX"_redis_ | cut  -d' ' -f1) &> /dev/null
        exit $VG_VALID_EXIT
        ;;
    shell)
        source $VG_ENV_FILE
        proto="`echo $REDIS_URL | grep '://' | sed -e's,^\(.*://\).*,\1,g'`"
        url=`echo $REDIS_URL | sed -e s,$proto,,g`
        userpass="`echo $url | grep @ | cut -d@ -f1`"
        pass=`echo $userpass | grep : | cut -d: -f2`
        if [ -n "$pass" ]; then
            user=`echo $userpass | grep : | cut -d: -f1`
        else
            user=$userpass
        fi
        hostport=`echo $url | sed -e s,$userpass@,,g | cut -d/ -f1`
        port=`echo $hostport | grep : | cut -d: -f2`
        if [ -n "$port" ]; then
            host=`echo $hostport | grep : | cut -d: -f1`
        else
            host=$hostport
        fi
        docker run \
            --interactive \
            --tty \
            --net=host \
            --rm \
            redis redis-cli -h "$host" -p "$port" -a "$pass"
        exit $VG_VALID_EXIT
        ;;
    help)
        echo "    redis new - Create a new, redis container"
        echo "    redis rm - Stop and remove *all* redis containers"
        echo "    redis shell - Open redis-cli pointed at REDIS_URL"
        ;;
    *)
        exit $VG_NOT_IMPLEMENTED_EXIT
        ;;
esac